            line-height:20px;}
        .cart{
            position:absolute;
            bottom:0px;
            height:45px;
            background-color:#FF0000;
            width:100%;
            display:flex;
            justify-content:center;
            align-items:center;}
        .cart a{
            color:#FFFFFF;
            font-family: 'Unica One', cursive;}

        .slider-box:hover{
            box-shadow:2px 2px 12px rgba(47,47,47,0.40);
        }
        .slider-box:hover .img-box img{
            transform:scale(1.07);
            transition:all ease 0.3s;}
        .cart:hover{
            transform:scale(1.1);

            box-shadow:2px 2px 12px rgba(47,47,47,0.40);
            transition:all ease 0.1s;}
        @media only screen and (max-width: 768px) {
            .swiper-container {
                height: 400px;
            }
        }

        .contenido-empresa{
            margin-top: 100px;
            text-align: center;
        }
    </style>
{% endblock %}

