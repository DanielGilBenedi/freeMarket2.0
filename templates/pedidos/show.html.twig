{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <h1>Pedidos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pedido.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Num_pedido</th>
                <td>{{ pedido.numPedido }}</td>
            </tr>
            <tr>
                <th>Cod_pedido</th>
                <td>{{ pedido.codPedido }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ pedido.precio }}</td>
            </tr>
            <tr>
                <th>Array_productos</th>
                <td>{{ pedido.arrayProductos ? pedido.arrayProductos|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pedidos_index') }}">back to list</a>

