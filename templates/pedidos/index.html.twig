{% extends 'base.html.twig' %}

{% block title %}Pedidos index{% endblock %}

{% block body %}
    <h1>Pedidos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Num_pedido</th>
                <th>Cod_pedido</th>
                <th>Precio</th>
                <th>Array_productos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.numPedido }}</td>
                <td>{{ pedido.codPedido }}</td>
                <td>{{ pedido.precio }}</td>
                <td>{{ pedido.arrayProductos ? pedido.arrayProductos|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('pedidos_show', {'id': pedido.id}) }}">show</a>
                    <a href="{{ path('pedidos_edit', {'id': pedido.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pedidos_new') }}">Create new</a>
{% endblock %}
